@using FileUploadIntegrationPrj.Models
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model Book
@{
    ViewBag.Title = "Add";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="col-sm-12">
            <div class="jumbotron">
                <h1 class="display-4">Create Book!</h1>
                <p class="lead">Add a new Book to the available list.</p>
            </div>
        </div>
    </div>
</div>




  <div class="col-md-6 offset-md-3">
  
    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Upload" data-ajax-loading="#loading" data-ajax-mode="replace" data-ajax-update="#updateAjax" data-ajax-success="Success" data-ajax-failure="Failure" data-ajax="true">
                <div class="form-group">
                    <div class="mb-3">
                        <input asp-for="BookLocationName" class="form-control" name="files" type="file"/>
                    </div>
                </div>
                <div class="row mt-2">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input asp-controller="Home" asp-action="Add" type="submit" value="Upload" class="btn btn-danger w-100" />
                                 <span id="loading" style="display:none;"><i class="fas fa-spinner fa-spin"></i></span>   

                            </div>
                        </div>
                </div>
  </form>      
</div>

<div class="col-md-6 offset-md-3" id="updateAjax">     
</div>
        <br />
@*<div asp-validation-summary="All" class="text-danger"></div>*@

<form asp-controller="Home" asp-action="Add" method="post">
    <div class="form-row">
        <div class="col-md-6 offset-md-3">
            <div class="col-sm-12">
                <label asp-for="BookTitle"></label>
                <input asp-for="BookTitle" class="form-control" /><br />
                @*@Html.ValidationMessageFor(x => x.BookTitle)*@
            </div>
            <div class="col-sm-12">
                <label asp-for="BookAuthor"></label>
                <input asp-for="BookAuthor" class="form-control" /><br />
                @*@Html.ValidationMessageFor(x => x.BookAuthor)*@
            </div>
            <div class="col-sm-12">
                <label asp-for="BookGenre"></label>
                <input asp-for="BookGenre" class="form-control" /><br />
                @*@Html.ValidationMessageFor(x => x.BookGenre)*@
            </div>
            <div class="form-group">
                    <label asp-for="DatePublished"></label>
                    <input asp-for="DatePublished" type="date" class="form-control" /><br />
                    @*@Html.ValidationMessageFor(x => x.DatePublished)*@
                </div>
            <div asp-validation-summary="ModelOnly">
            </div>
            <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary w-100" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary  w-100">Back</a>
                    </div>
            </div>
        </div>
    </div>
</form>

